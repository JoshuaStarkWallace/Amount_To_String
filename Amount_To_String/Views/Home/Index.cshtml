@model AmountToString.Models.FormInput

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="mystyle.css">

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="text-center" style="padding-top: 2em">
        <h1>Welcome</h1>
        <h2>Exercise 1 interview project</h2>
    </div>

    <div class="text-center">
        <h3>Enter an amount:</h3>
    </div>

    <div class="text-center">
        @Html.TextBoxFor(x => x.Amount)
        <br />
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
    </div>

    <div class="text-center">
        <input type="submit" value="Convert to String" style="margin-top:1em" />
    </div>

    <div class="text-center" style="padding-top: 1em">
        <h4>Result:</h4>
    </div>

    <div class="text-center">
        @Html.TextBox("result", ViewData["result"], new { disabled = "disabled", style = "text-align:center; min-width:80%;" })
    </div>

}
